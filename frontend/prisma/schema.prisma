generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Game {
  id           String     @id @default(uuid())
  createdAt    DateTime   @default(now())
  result       Result
  pgn          String
  fen          String
  modelVersion String
  status       GameStatus @default(fresh)
}

enum Result {
  win
  loss
  draw
}

enum GameStatus {
  fresh
  completed
  archived
  bad
}